#include <SoftwareSerial.h>
#include <AFMotor.h>

AF_DCMotor motor1(1);
AF_DCMotor motor2(2);
AF_DCMotor motor3(3);
AF_DCMotor motor4(4);

char t;
 
void setup() {
Serial.begin(9600);
  motor1.setSpeed(255);
  motor2.setSpeed(255);
  motor3.setSpeed(255);
  motor4.setSpeed(255);
  Stop();
SoftwareSerial mySerial(0, 1); // RX, TX

Serial.println("Started...");
 
}
 
void loop() {
if(Serial.available()){
  t = Serial.read();
  Serial.println(t);

if(t == 'F'){            //move forward(all motors rotate in forward direction)
  digitalWrite(12,HIGH);
  digitalWrite(10,HIGH);
  Serial.println("Forward");
  forward(); 
}
 
else if(t == 'B'){      //move reverse (all motors rotate in reverse direction)
  digitalWrite(11,HIGH);
  digitalWrite(9,HIGH);
  Serial.println("Back");
  backward();
}
 
else if(t == 'L'){      //turn right (left side motors rotate in forward direction, right side motors doesn't rotate)
  digitalWrite(10,HIGH);
  Serial.println("LEFT");
  left(); 
}
 
else if(t == 'R'){      //turn left (right side motors rotate in forward direction, left side motors doesn't rotate)
  digitalWrite(12,HIGH);
  Serial.println("Right");
  right();
}
//if(t=='S')
//{
// Stop(); 
//}

else{
  Stop();
  }
 

delay(1);
}
}
void forward()
{
     motor1.run(FORWARD);
  motor2.run(FORWARD);
  motor3.run(FORWARD);
  motor4.run(FORWARD);
}

void backward()
{
     motor1.run(BACKWARD);
  motor2.run(BACKWARD);
  motor3.run(BACKWARD);
  motor4.run(BACKWARD);
}
void left()
{
  motor1.run(BACKWARD);
  motor2.run(FORWARD);
  motor3.run(BACKWARD);
  motor4.run(BACKWARD);
}
void right()
{
  motor1.run(FORWARD);
  motor2.run(BACKWARD);
  motor3.run(FORWARD);
  motor4.run(FORWARD);
}
void Stop()
{
  motor1.run(RELEASE);
  motor2.run(RELEASE);
  motor3.run(RELEASE);
  motor4.run(RELEASE);
}
